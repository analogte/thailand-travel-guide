{
    "ci": {
        "collect": {
            "staticDistDir": "./",
            "url": [
                "http://localhost/index.html",
                "http://localhost/destinations.html",
                "http://localhost/culture.html",
                "http://localhost/guide.html"
            ],
            "numberOfRuns": 3
        },
        "assert": {
            "assertions": {
                "categories:performance": [
                    "warn",
                    {
                        "minScore": 0.9
                    }
                ],
                "categories:accessibility": [
                    "error",
                    {
                        "minScore": 0.9
                    }
                ],
                "categories:best-practices": [
                    "warn",
                    {
                        "minScore": 0.9
                    }
                ],
                "categories:seo": [
                    "error",
                    {
                        "minScore": 0.9
                    }
                ]
            }
        },
        "upload": {
            "target": "temporary-public-storage"
        }
    }
}